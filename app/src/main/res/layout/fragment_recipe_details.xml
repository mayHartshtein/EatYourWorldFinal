<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hartshteinma.eatyourworld.controller.fragments.RecipeDetailsFragment">
    <!--todo fix whatever-->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Recipe details"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/details_table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Country:"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment_recipeDetails_countryName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="25dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Recipe name:"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment_recipeDetails_recipeName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="25dp" />


        </TableRow>

    </TableLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/details_table_layout">

        <TextView
            android:id="@+id/recipe_details_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttons_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_recipeDetails_deleteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-smallcaps"
            android:text="delete"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView"
        android:layout_marginEnd="48dp"
        android:layout_marginLeft="250dp"
        android:layout_weight="3">

        <ProgressBar
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="true" />

        <ImageView
            android:id="@+id/fragment_details_Recipe_image"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView"
            android:layout_marginEnd="48dp"
            android:layout_marginLeft="250dp"
            android:layout_weight="3"
            android:src="@drawable/picfood"
            android:visibility="invisible" />
    </FrameLayout>
</RelativeLayout>